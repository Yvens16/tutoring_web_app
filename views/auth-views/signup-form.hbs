<div class="top-content">

  <div class="inner-bg">
    <div class="container">

      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1>Connexion &amp; Inscription</h1>

        </div>
      </div>

      <div class="row">
        <div class="col-sm-5">

          <div class="form-box">
            <div class="form-top">
              <div class="form-top-left">
                <h3>Se connecter</h3>
                <p>Entrer votre email & mot de passe pour vous connecter:</p>
              </div>
              <div class="form-top-right">
                <i class="fa fa-lock"></i>
              </div>
            </div>
            <div class="form-bottom">
              <form role="form" action="/process-login" method="POST" class="login-form">
                <div class="form-group">
                  <label class="sr-only" for="form-username">Email</label>
                  <input type="text" name="email" placeholder="Email" class="form-username form-control" id="form-username">
                </div>
                <div class="form-group">
                  <label class="sr-only" for="form-password">Mot de passe</label>
                  <input type="password" name="originalPassword" placeholder="Mot de passe..." class="form-password form-control"
                    id="form-password">
                </div>
                <button class="btn"><strong>Se connecter!</strong></button>
              </form>
            </div>
          </div>

