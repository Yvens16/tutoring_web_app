<h2 style="color: white">Modifier ce cours</h2>

<div id="hello" class="row">
  <div class="contact-us">
    <div class="form-box">
      <div class="form-top">
        <div class="form-top-left">
          <p>Modifier ce cours</p>
        </div>
        <div class="form-top-right">
          <span class="glyphicon glyphicon-wrench"></span>
        </div>
      </div>
      <div class="form-bottom">
        <form role="form" action="/note/{{noteItem._id}}/process-edit" method="POST" class="login-form" enctype="multipart/form-data">
          <div class="form-group">
            <label class="sr-only" for="form-username">Matière</label>
            <input type="text" name="topic" placeholder="Votre nom" value="{{noteItem.topic}}" class="form-username form-control"
              id="form-username">
          </div>
          <div class="form-group">
            <label class="sr-only" for="form-username">Sujet du cours</label>
            <input type="text" name="title" placeholder="Sujet du cours" value="{{noteItem.title}}" class="form-username form-control"
              id="form-username">
          </div>
          <div class="form-group">
            <label class="sr-only" for="form-username">Notes</label>
            <textarea name="noteCours" class="form-username form-control" cols="30" rows="10" placeholder="Tes notes...">{{noteItem.noteCours}}</textarea>
            {{!-- <input type="text" name="noteCours" value="{{currentUser.phoneparent}}" placeholder="N° d'un parent ou responsable légal"
              value="{{currentUser.phoneparent}}" class="form-username form-control" id="form-username"> --}}

            <div class="form-group">
              <label class="sr-only" for="form-username">Fichier (.pdf seulement):</label>
              <input type="file" style="margin-top:15px" name="noteFileUpload" value="{{noteItem.noteFile}}" class="form-username form-control"
                id="form-username">
            </div>

            <button class="btn"><strong>Sauvegarder les changements</strong></button>
        </form>
      </div>
      <a href="/note/{{noteItem._id}}" style="margin-left: 40%; color: white">Annuler</a>
    </div>
  </div>
</div>